{{#unless hideNavBar}}
<nav class="navbar navbar-default">
<div class="container-fluid">

  <div class="navbar-header">
    {{#link-to 'index'}}<a class="navbar-brand">WatchList </a>{{/link-to}}
  </div>
  <div class="navbar-header">
    {{#link-to 'saved-list'}}<a class="navbar-brand"> My List</a>{{/link-to}}
  </div>

  {{#unless hideSearch}}
  <form class="navbar-form navbar-right">
    <div class="form-group">

      <select id="searchselect"disabled={{disabled}} class="{{class}}" {{action 'change' on='change'}}>
        {{#if prompt}}
          <option disabled selected={{is-not selection}}>
            {{prompt}}
          </option>
        {{/if}}
        {{#each content as |item|}}
          <option value={{read-path item optionValuePath}}>
            {{read-path item optionLabelPath}}
          </option>
        {{/each}}
      </select>

      {{input id='searchinput' type="text" value=keywords class="form-control" placeholder="Keyword(s)"}}
      <button id="searchbutton" class='btn btn-warning'{{action 'searchBestBuy'}} type="submit">Search</button>
    </div>
  </form>
  {{/unless}}

</div>
</nav>
{{/unless}}
